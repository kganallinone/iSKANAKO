<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear23"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/setupscanpage"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="8dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/textview4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Let's Scan!"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#455A64" />
			<TextView
				android:id="@+id/textview5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Set up your attendance scanner."
				android:textSize="12sp"
				android:textColor="#455A64" />
			<TextView
				android:id="@+id/textview9"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Note: Choose your subjects before to click CREATE button."
				android:textSize="10sp"
				android:textStyle="bold"
				android:textColor="#90A4AE" />
			<LinearLayout
				android:id="@+id/linear13"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear15"
					android:layout_width="match_parent"
					android:layout_height="2dp"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:padding="8dp"
					android:background="#B0BEC5"
					android:orientation="horizontal" />
				<TextView
					android:id="@+id/textview6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:text="Your Subject/s:"
					android:textSize="10sp"
					android:textStyle="bold"
					android:textColor="#90A4AE" />
				<ListView
					android:id="@+id/subject"
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:dividerHeight="0dp"
					android:divider="@null"
					android:choiceMode="none" />
				<LinearLayout
					android:id="@+id/linear17"
					android:layout_width="match_parent"
					android:layout_height="2dp"
					android:layout_marginBottom="10dp"
					android:padding="8dp"
					android:background="#B0BEC5"
					android:orientation="horizontal" />
			</LinearLayout>
			<ScrollView
				android:id="@+id/vscroll1"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
				<LinearLayout
					android:id="@+id/linear24"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|top"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/linear16"
						android:layout_width="280dp"
						android:layout_height="40dp"
						android:layout_marginBottom="10dp"
						android:background="#607D8B"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<EditText
							android:id="@+id/room"
							android:layout_width="250dp"
							android:layout_height="30dp"
							android:padding="8dp"
							android:background="#607D8B"
							android:gravity="center_vertical"
							android:textSize="12sp"
							android:textColor="#FFFFFF"
							android:hint="Room"
							android:textColorHint="#FFFFFF" />
						<Spinner
							android:id="@+id/spinner1"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:padding="10dp"
							android:background="@drawable/ic_arrow_drop_down_circle_black"
							android:spinnerMode="dropdown" />
					</LinearLayout>
					<Button
						android:id="@+id/create_bttn"
						android:layout_width="280dp"
						android:layout_height="70dp"
						android:background="#B71C1C"
						android:text="CREATE"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#FFCDD2" />
				</LinearLayout>
			</ScrollView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
